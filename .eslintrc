{
  "root": true,
  "extends": "eslint:recommended",
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "es6": true,
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "quotes": "off",
    "no-console": "warn",
    "no-unused-vars": "warn",
    "no-unreachable": "warn",
    "no-redeclare": "warn",
    "eol-last": "error"
  }
}